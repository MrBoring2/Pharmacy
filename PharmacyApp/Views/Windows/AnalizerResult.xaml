<Window x:Class="PharmacyApp.Views.Windows.AnalizerResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyApp.Views.Windows"
        mc:Ignorable="d"
        xmlns:closer="clr-namespace:PharmacyApp.Services.Common"
        Title="AnalizerResultVM" Height="250" Width="458.974"
        closer:DialogCloser.DialogResult="{Binding DialogResult}">
    <Grid>
        <Button Command="{Binding Accept}" Content="Принять результат" HorizontalAlignment="Left" Margin="10,10,0,10" VerticalAlignment="Bottom" Width="auto"/>
        <Button Command="{Binding Reject}" Content="Отклонить результат" HorizontalAlignment="Right" Margin="10,0,10,10" VerticalAlignment="Bottom"  Width="auto"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Результат:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" Text="{Binding Result}" VerticalAlignment="Top"/>

    </Grid>
</Window>
