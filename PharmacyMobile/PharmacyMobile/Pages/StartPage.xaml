<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacyMobile.Pages.StartPage">

    <StackLayout>
        <Image Source="logo.png"/>
        <Button Text="Новости" x:Name="News" Clicked="News_Clicked"/>
        <Button Text="Услуги" x:Name="Services" Clicked="Services_Clicked"/>
        <Button Text="Личный кабинет" x:Name="ToPersonalAccount" Clicked="ToPersonalAccount_Clicked"/>
        <Button Text="Выход" VerticalOptions="EndAndExpand" x:Name="Exit" Clicked="Exit_Clicked"/>
        <Button Text="Авторизация" VerticalOptions="EndAndExpand" x:Name="Login" Clicked="Login_Clicked"/>
    </StackLayout>

</ContentPage>
