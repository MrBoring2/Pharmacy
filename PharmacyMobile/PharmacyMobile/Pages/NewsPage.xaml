<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacyMobile.Pages.NewsPage">
  <ListView x:Name="MyListView"
            ItemsSource="{Binding NewsItems}"
            CachingStrategy="RecycleElement"
            HasUnevenRows="True" SeparatorColor="#FF76E383" ItemTapped="Handle_ItemTapped">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical" Padding="10">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Title}" FontSize="20" FontAttributes="Bold" FontFamily="Comic Sans MS"/>
                            <Label Text="{Binding Date}" MinimumWidthRequest="100" FontSize="14" HorizontalTextAlignment="End" FontFamily="Comic Sans MS"/>
                        </StackLayout>
                        <Label Text="{Binding Text}" FontSize="16" FontFamily="Comic Sans MS"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
       
    </ListView>
</ContentPage>
