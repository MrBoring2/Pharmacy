<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacyMobile.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout Margin="0,100,0,0">
            
            <Label Text="Логин" Style="{StaticResource LabelTitle}" HorizontalOptions="StartAndExpand" Margin="10"/>
            <Entry Text="{Binding Login}" HorizontalOptions="FillAndExpand" Margin="10,0,10,0"/>
            <Label Text="Пароль" Style="{StaticResource LabelTitle}" HorizontalOptions="StartAndExpand" Margin="10"/>
            <Entry Text="{Binding Password}" HorizontalOptions="FillAndExpand" Margin="10,0,10,0"/>
            <Button x:Name="enter" Text="Войти" Margin="10" Clicked="enter_Clicked"/>
            <Label x:Name="registerLink" Text="Нет аккаунта? - Зарегистрироваться." HorizontalOptions="CenterAndExpand" Margin="10" TextDecorations="Underline" TextColor="#4141FF"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>